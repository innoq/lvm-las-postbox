<header class="page-header">
    <h1>Postkorb</h1>
</header>

<div class="row">
    <div class="col-md-12">
        <div class="listing-header">
            <h2>Nachrichten</h2>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive active">
                    <table class="messages-overview table">
                        <thead>
                        <tr>
                            <th class="sort" data-sort="col-message-date">Datum</th>
                            <th class="sort" data-sort="col-message-text">Text</th>
                            <th class="sort" data-sort="col-message-reference-text">Bezug</th>
                        </tr>
                        </thead>
                        <tbody>
						{{# messages }}
                            <tr>
                                <td class="col-message-date">{{ date }}</td>
                                <td class="col-message-text">{{ text }}</td>
                                <td class="col-message-reference">
									{{# referenceUri }}
                                        <a href="{{ referenceUri}}">{{ referenceText }}</a>
									{{/ referenceUri }}
                                </td>
                            </tr>
						{{/ messages }}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

</div>
